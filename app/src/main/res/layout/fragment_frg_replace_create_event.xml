<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lalit.eventit.FrgReplaceCreateEvent"
    android:background="@drawable/swoopzi"
    android:id="@+id/flReplaceCreateEvent">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tvEventDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You have no events to Manage"
        android:gravity="center"
        android:layout_marginTop="150sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btnCreateEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Create New Event"
        android:textAllCaps="false"
        android:background="@drawable/btn_login_main"
        android:paddingHorizontal="@dimen/marginButton"
        android:layout_marginTop="50sp"/>

</FrameLayout>
